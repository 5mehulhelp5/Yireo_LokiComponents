<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.messages">
            <block name="loki-components.messages" template="Yireo_LokiComponents::component/messages.phtml" before="-"/>
        </referenceContainer>

        <referenceContainer name="before.body.end">
            <container name="loki-component-types">
                <block name="loki-components.script.component-type.base" template="Yireo_LokiComponents::script/component-type/base-component-type.phtml"/>
            </container>

            <container name="loki-components">
                <block name="loki-components.script.component.base" template="Yireo_LokiComponents::script/component/base-component.phtml"/>
                <block name="loki-components.script.component.messages" template="Yireo_LokiComponents::script/component/messages-component.phtml"/>
                <block name="loki-components.script.component.toggle" template="Yireo_LokiComponents::script/component/toggle-component.phtml"/>
            </container>

            <block name="loki-components.debugger" template="Yireo_LokiComponents::component/debugger.phtml" before="-"/>
        </referenceContainer>
    </body>
</page>
